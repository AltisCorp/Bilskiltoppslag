<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bgmainland">
    
    <EditText 
    android:layout_height="wrap_content" 
    android:id="@+id/regEdit" 
    android:layout_centerVertical="true"
    android:layout_width="match_parent"
    android:inputType="textCapCharacters"
    android:layout_toLeftOf="@+id/imageButton_Submit">
    </EditText>
    <ImageButton android:src="@drawable/xfmail"
    android:layout_height="wrap_content" 
    android:layout_width="wrap_content" 
    android:id="@+id/imageButton_Submit" 
    android:layout_alignParentRight="true" 
    android:layout_alignBottom="@+id/regEdit" 
    android:layout_alignTop="@+id/regEdit"></ImageButton>
</RelativeLayout>
